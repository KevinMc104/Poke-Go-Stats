<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pokemon_detailed_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pokemonGoAppBackground"
    tools:context=".view.pokemon.detailed.PokemonDetailedActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/pokemon_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_detailed_type1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_whitespace_size_large_material"
        style="@style/AppTheme.TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowRadius="3"
        android:shadowDx="3"
        android:shadowDy="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Type1"/>

    <TextView
        android:id="@+id/tv_detailed_type2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_whitespace_size_large_material"
        style="@style/AppTheme.TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowRadius="3"
        android:shadowDx="3"
        android:shadowDy="3"
        app:layout_constraintStart_toEndOf="@+id/tv_detailed_type1"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Type2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".30" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_detailed"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/tab_light_green_bottom_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:tabIndicator="@drawable/tab_indicator"
        app:tabIndicatorColor="@color/darker_green"
        app:tabIndicatorHeight="40dp"
        app:tabTextColor="@color/black">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stats" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/weather" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_detailed"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_layout_detailed">

    </androidx.viewpager.widget.ViewPager>

</androidx.constraintlayout.widget.ConstraintLayout>