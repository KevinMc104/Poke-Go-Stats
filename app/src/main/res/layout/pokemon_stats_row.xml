<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/app_whitespace_size_large_material"
    android:layout_marginEnd="@dimen/app_whitespace_size_large_material"
    android:background="@drawable/row_rounded_corner_drawable">

    <TextView
        android:id="@+id/tv_menu_pokemon_name"
        style="@style/AppTheme.TextAppearance.AppCompat.Body3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_whitespace_size_large_material"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name" />

    <TextView
        android:id="@+id/tv_menu_pokemon_form_name"
        style="@style/AppTheme.TextAppearance.AppCompat.Body3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_menu_pokemon_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Form" />

    <TextView
        android:id="@+id/tv_menu_max_cp"
        style="@style/AppTheme.TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_whitespace_size_medium_material"
        android:layout_marginBottom="@dimen/app_whitespace_size_medium_material"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Max CP" />

    <TextView
        android:id="@+id/tv_menu_type1"
        style="@style/AppTheme.TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_margin="3dp"
        android:layout_gravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_menu_type2"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowRadius="3"
        android:shadowDx="3"
        android:shadowDy="3"
        tools:text="Pokemon Type1" />

    <TextView
        android:id="@+id/tv_menu_type2"
        style="@style/AppTheme.TextAppearance.AppCompat.Body1"
        android:textSize="15sp"
        android:layout_margin="@dimen/app_whitespace_size_large_material"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowRadius="3"
        android:shadowDx="3"
        android:shadowDy="3"
        tools:text="Pokemon Type2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".66" />

</androidx.constraintlayout.widget.ConstraintLayout>