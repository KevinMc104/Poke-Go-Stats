<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/light_green"
                android:endColor="@color/darker_green"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/Poison" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/Fire"
                android:startColor="@color/Water"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/Grass" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/Ghost"
                android:startColor="@color/Psychic"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/Flying" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>